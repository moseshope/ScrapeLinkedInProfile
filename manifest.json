{
    "name": "Prospectr by Convertlead",
    "description": "Turn linkedin profiles into hot & 100% verified e-mail leads.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/imgs/icon_16.png",
        "32": "/imgs/icon_32.png",
        "48": "/imgs/icon_64.png",
        "128": "/imgs/icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "/imgs/icon_16.png",
            "32": "/imgs/icon_32.png",
            "48": "/imgs/icon_64.png",
            "128": "/imgs/icon_128.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*",
                "*://localhost/*"
            ],
            "js": [
                "./scripts/jquery.min.js"
            ],
            "runAt": "document_start"
        }
    ],
    "permissions": [
        "declarativeContent",
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*.linkedin.com/*"
    ]
    
}